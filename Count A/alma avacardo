%{  
#include <stdio.h>  
int count = 0;  
FILE *yyin;  
%}  
%%  
[aA][a-zA-Z]*[aA] {  
printf("%s,", yytext);  
count++;  
}  
[ \t\n]+   
[a-zA-Z]+   
.   
%%  
int yywrap(void) {  
return 1;  
}  
int main(int argc, char **argv) { 
 
 
  if (argc < 2) {  
 printf("Usage: %s <input_file>\n", argv[0]);  
 return 1;  
 }  
 yyin = fopen(argv[1], "r");  
 if (!yyin) {  
 perror("Cannot open file");  
 return 1;  
 }  
 yylex();  
 printf("\nTotal words starting AND ending with a/A: %d\n", count);  
 fclose(yyin);  
 return 0;  
}  
