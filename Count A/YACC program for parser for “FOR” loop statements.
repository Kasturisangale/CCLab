Source Code	1-a YACC file for loop
%{
#include <stdio.h>
#include <stdlib.h>
int yylex(void);
int yyerror(const char *s);
%}

%token FOR LPAREN RPAREN SEMI ASSIGN RELOP NUM ID

%%
S : FOR LPAREN init SEMI cond SEMI incr RPAREN
      { printf("Valid FOR loop syntax\n"); }
  ;

init : ID ASSIGN NUM ;

cond : ID RELOP NUM ;

incr : ID ASSIGN ID
     | ID ASSIGN NUM
     ;
%%

int main() {
    printf("Enter FOR loop statement:\n");
    return yyparse();
}

int yyerror(const char *s) {
    printf("Invalid syntax: %s\n", s);
    return 0;
}

1-b LEX file for loop 

%{
#include "y.tab.h"
#include <stdlib.h>
%}

%%
"for"               { return FOR; }
"("                 { return LPAREN; }
")"                 { return RPAREN; }
";"                 { return SEMI; }
"="                 { return ASSIGN; }
"<"                 { return RELOP; }
[0-9]+              { yylval = atoi(yytext); return NUM; }
[a-zA-Z_][a-zA-Z0-9_]* { return ID; }
[ \t\n]             ;
.                   { return yytext[0]; }
%%

int yywrap() { return 1; }  

2-a YACC file while loop
%{
#include <stdio.h>
#include <stdlib.h>

int yylex(void);
int yyerror(const char *s);
%}

%token WHILE LPAREN RPAREN RELOP ASSIGN SEMI NUM ID

%%
S : WHILE LPAREN cond RPAREN stmt
      { printf("Valid WHILE loop syntax\n"); }
  ;

cond : ID RELOP NUM ;

stmt : ID ASSIGN NUM SEMI
     | ID ASSIGN ID SEMI
     ;
%%

int main() {
    printf("Enter WHILE loop statement:\n");
    return yyparse();
}

int yyerror(const char *s) {
    printf("Invalid syntax: %s\n", s);
    return 0;
}

2-b LEX file while loop

%{
#include "y.tab.h"
#include <stdlib.h>
%}

%%
"while"             { return WHILE; }
"("                 { return LPAREN; }
")"                 { return RPAREN; }
"<"|"=="|">"        { return RELOP; }
"="                 { return ASSIGN; }
";"                 { return SEMI; }
[0-9]+              { yylval = atoi(yytext); return NUM; }
[a-zA-Z_][a-zA-Z0-9_]* { return ID; }
[ \t\n]             ;   /* Ignore whitespace */
.                   { return yytext[0]; }
%%

int yywrap(void) { return 1; }

3-a YACC file switch case
%{
#include <stdio.h>
#include <stdlib.h>

int yylex(void);
int yyerror(const char *s);
%}

%token SWITCH CASE DEFAULT BREAK COLON SEMI LBRACE RBRACE NUM ID
%token LPAREN RPAREN ASSIGN

%%
S : SWITCH LPAREN ID RPAREN LBRACE cases default_opt RBRACE
      { printf("Valid SWITCH statement\n"); }
  ;

cases : cases case
      | case
      ;

case : CASE NUM COLON stmt BREAK SEMI ;

stmt : ID SEMI
     | ID ASSIGN NUM SEMI
     | ID ASSIGN ID SEMI
     ;

default_opt : DEFAULT COLON stmt
            |
            ;
%%

int main() {
    printf("Enter SWITCH statement:\n");
    return yyparse();
}

int yyerror(const char *s) {
    printf("Invalid syntax: %s\n", s);
    return 0;
}

3-b LEX file switch case

%{
#include "y.tab.h"
#include <stdlib.h>
%}

%%
"switch"        { return SWITCH; }
"case"          { return CASE; }
"default"       { return DEFAULT; }
"break"         { return BREAK; }
"("             { return LPAREN; }
")"             { return RPAREN; }
"{"             { return LBRACE; }
"}"             { return RBRACE; }
":"             { return COLON; }
";"             { return SEMI; }
"="             { return ASSIGN; }
[0-9]+          { yylval = atoi(yytext); return NUM; }
[a-zA-Z_][a-zA-Z0-9_]* { return ID; }
[ \t\n]         ;  
.               { return yytext[0]; }
%%

int yywrap(void) { return 1; }
