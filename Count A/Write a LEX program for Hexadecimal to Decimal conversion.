
%{ 
#include <stdio.h> 
#include <stdlib.h> 
#include <ctype.h> 
 
int hexToDec(char *hex) { 
    int decimal = 0; 
    for (int i = 0; hex[i] != '\0'; i++) { 
        decimal *= 16; 
        if (hex[i] >= '0' && hex[i] <= '9') 
            decimal += hex[i] - '0'; 
        else if (hex[i] >= 'a' && hex[i] <= 'f') 
            decimal += hex[i] - 'a' + 10; 
        else if (hex[i] >= 'A' && hex[i] <= 'F') 
            decimal += hex[i] - 'A' + 10; 
        else { 
            printf("Invalid hex character: %c\n", hex[i]); 
            return -1; 
        } 
    } 
    return decimal; 
} 
%} 
 
%% 
 
[0-9a-fA-F]+ { 
    int num = hexToDec(yytext); 
    if (num != -1) 
        printf("Hexadecimal: %s â†’ Decimal: %d\n", yytext, num); 
} 
 
[ \t\n]+ ; 
.         ; 
 
%% 
 
int main() { 
    printf("Enter hexadecimal numbers:\n"); 
    yylex(); 
    return 0; 
} 
 
int yywrap() { return 1; }
