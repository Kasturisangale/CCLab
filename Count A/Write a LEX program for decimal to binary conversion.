%{ 
#include <stdio.h> 
#include <stdlib.h> 
 
void toBinary(int n) { 
    if (n == 0) { 
        printf("0"); 
        return; 
    } 
    int bin[64], i = 0; 
    while (n > 0) { 
        bin[i++] = n % 2; 
        n /= 2; 
    } 
    for (int j = i - 1; j >= 0; j--) 
        printf("%d", bin[j]); 
} 
%} 
 
